<?xml version="1.0"?>
<PropertyList>

	<path>chock_nose.ac</path>

<!-- Translate the nose chock depending on the aircraft length -->

<animation>
    <type>translate</type>
	<object>Chock_front</object>
    <object>Chock_back</object>
	<property>sim/model/ramp/x-m</property>
	<offset-m>24.5221</offset-m>
	<axis>
		<x>1</x>
		<y>0</y>
		<z>0</z>
	</axis>
</animation>
	
<animation>
	<type>translate</type>
	<object>Chock_front</object>
    <object>Chock_back</object>
	<property>gear/gear[0]/compression-norm</property>
	<interpolation>
		<entry><ind>0.18</ind><dep>0.045</dep></entry>
		<entry><ind>0.29</ind><dep>0.12</dep></entry>
	</interpolation>
	<axis>
		<x>0</x>
		<y>0</y>
		<z>1</z>
	</axis>
</animation>

	<animation>
        <type>pick</type>
		<object-name>Chock_front</object-name>
        <object-name>Chock_back</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-toggle</command>
                <property>services/chocks/nose</property>
            </binding>
        </action>
    </animation>

</PropertyList>
